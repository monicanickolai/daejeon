<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-warning center" role="alert">
      <p><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</p>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul></div>
    </div>
  <% end %>
<div class="col-lg-4 col-md-3 col-xs-1">&nbsp;</div>
<div class="col-lg-4 col-md-6 col-xs-10">
  <div class="field form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, autofocus: true, :class => "form-control", :placeholder => "Enter name" %>
  </div>
  <div class="field form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, :class => "form-control", :placeholder =>"Enter description" %>
  </div>
  <div class="field form-group">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url, :class => "form-control", :placeholder => "www.site.com" %>
  </div>
  <div class="field form-group">
    <%=f.label :colour %><br>
    <%=f.text_field :colour, :class => "form-control", :placeholder => "e.g. gray, blue, etc." %>
  </div>
  <div class="field form-group">
        <%=f.label :price %><br>
    <%=f.text_field :price, :class => "form-control", :placeholder =>"$ (US Dollars)" %>
  </div>
  
<div class="center">
    <%= f.submit :class => "btn btn-default center" %>
  </div>
<% end %>
<br>
<div class="center mtop20">
  <%= link_to 'Show', @product %> |
  <%= link_to 'Back', products_path %>
</div>
</div>

<div class="col-lg-4 col-md-3 col-xs-1">&nbsp;</div>
