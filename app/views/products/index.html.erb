<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>
 <%= link_to 'Add Product', new_product_path, :class => "btn btn-default addproductbtn" %>
<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
    <div class="col-sm-10 col-md-6 col-lg-4">
      <div class="thumbnail productgrid">
        
        <%= link_to image_tag(product.image_url, class: "img-responsive productimg"), product %>
        <h3><%= product.name %></h3>       
<!--    <p><%= product.description %></p>
        <p><%= product.colour %></p> -->
        <p><%= product.price %></p>
        <%= link_to 'View', product, :class => "btn btn-default view" %>
<!--        <%= link_to 'Edit', edit_product_path(product) %>
        <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %> -->
      </div>
    </div>
    <% end %>
  </div>
  
</div>
<hr/>