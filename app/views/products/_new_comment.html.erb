<% if signed_in? %>
	<%= form_for([@product, @product.comments.build], remote: true) do |f| %>

      <h1 class="center sm-heading">Add a review:</h1>
		<div class="form-group">
			<!--<%= f.label :body, "Comments" %><br>-->
			<%= f.text_area :body, :class => "form-control", :placeholder =>"Enter your comments" %>
			<div class='mleft5'> Rating required </div>
			<div class="rating"></div>		
		</div>

		<%= f.submit "Submit", :class => "btn btn-default mleft75"  %>
	<% end %>
<% end %>