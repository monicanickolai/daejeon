<!DOCTYPE html>
<html>
<head>
  <title>Daejeon</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse" role="navigation"> 
  <div class="container-fluid"> 
    <div class="navbar-header"> 
      <button class="navbar-toggle" data-target=".navbar-collapse" data-toggle="collapse" type="button">
        <span class= "sr-only">Toggle navigation</span> 
        <span class= "icon-bar"></span> <span class="icon-bar"></span> 
        <span class= "icon-bar"></span>
      </button> <%= link_to image_tag("navbar.png"), root_path %> 
    </div> 
    <div class="nav navbar-nav navbar-right"> 
      <% if user_signed_in? %> 
      <%= link_to('Logout', destroy_user_session_path, :method => :delete, class: "navbar-brand") %> 
      <%= link_to('Edit Profile', edit_user_path(current_user) , class: "navbar-brand") %>
      
      <% else %> 
      <%= link_to('Login', new_user_session_path, class: "navbar-brand") %> 
      <% end %> 
    </div> 
    <div class="collapse navbar-collapse" id="myNavbar"> 
      <ul class="nav navbar-nav navbar-left"> 
        <li><%= link_to 'Products', products_path %></li> 
        <li><%= link_to 'About', static_pages_about_path %></li> 
        <li><%= link_to 'Contact', static_pages_contact_path %></li> 
      </ul> 
      <div class="col-sm-3 col-md-3 pull-right mtop12"> 
      <%= form_tag("/products", method: "get") do %> 
      <form class="navbar-form" role="search"> 
        <div class="input-group"> 
          <%= text_field_tag :q, '', placeholder: 'Search Products', class: 'form-control' %> 
          <div class="input-group-btn"> 
            <button class="btn btn-default" type="submit" submit_tag("search")> 
            <i class="glyphicon glyphicon-search"></i> 
            </button> 
          </div> 
        </div> 
      </form> 
    <% end %> 
      </div> 
    </div> 
  </div> 
</nav> 

<div class="container">
  <% if notice %>
    <p id="notice" class="alert alert-info fade in">
      <button class="close" data-dismiss="alert">×</button>
      <%= notice %>
    </p>
  <% end %>

  <% if alert %>
    <p id="alert" role="alert" class="alert alert-warning fade in">
      <button class="close" data-dismiss="alert">×</button>
      <%= alert %>
    </p>
  <% end %>

  <%= yield %>
</div>

<footer>
	<p>&copy; 2015 Monica Nickolai</p></footer>
</body>
</html>
